{% extends 'base.html.twig' %}
{% set title = 'Visszajelzés küldése' %}
{% block title %} {{ title }} {% endblock %}
{% block body %}
    <div class="container">
        <div class="row">
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div>
                        <h3>{{ message }}</h3>
                    </div>
                {% endfor %}
            {% endfor %}
            <div class="d-flex mt-5 col-12">
                <div class="container border rounded">
                    <h3 class="text-center"><del>Virgo</del> <del>Ádám</del> <del>SMC</del> rAPId Feedbacker</h3>
                    <h3 class="text-center">{{ title }}</h3>
                    <div class="container border rounded">
                        <p>1. Írd le a visszajelzésedet</p>
                        <p>2. Küldd el</p>
                        <p>3. Az előadó megkapja e-mailben</p>
                    </div>
                    <div class="d-flex mt-3 container border rounded">
                        {{ form_start(form, {'action': path('email'), 'method': 'POST'}) }}
                        {{ form_row(form.title) }}
                    </div>
                    <div class="d-flex mt-3 container border rounded">
                        {{ form_row(form.feedback) }}
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
            <div class="col"></div>
        </div>
    </div>
{% endblock %}
